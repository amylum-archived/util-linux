name 'util-linux'
org 'amylum'

license 'COPYING'

deps(
  pam: {
    version: '1.3.0-40',
    checksum: '83da3cd19939cad6403248bffc8d80b5ed2188857135179dfbb8dc67387017b0'
  },
  ncurses: {
    version: '6.1-20180505-1',
    checksum: 'cc5014c9f6ed2fe8fd3eeaa88f6229454b7f6f9026e031a69eefd0a0612c985e'
  },
  'linux-api-headers': {
    version: '4.16-1',
    checksum: '55af258de8663de5ec97db875651eaeecc209b47454dbbf27757d4de595e618d'
  }
)
remove_linker_archives
remove_pkgconfig_files

configure_flags(
  prefix: '/usr',
  libdir: '/usr/lib',
  bindir: '/usr/bin',
  localstatedir: '/run',
  'enable-fs-paths-default': '/usr/bin',
  'disable-rpath': nil,
  'with-systemd': 'no'
)

cflags
harden

build do
  run './autogen.sh'
  configure 'CPPFLAGS' => @forge.cflags.join(' ')
  make 'V' => '1'
  run 'find .libs -name "*.so*" -type f | xargs chrpath -d'
  install 'V' => '1'
  run "find .libs -name '*.so*' ! -name '*T' -type f | xargs -n1 -I{} cp {} #{releasedir}/usr/lib"
  run "mv #{releasedir}/{,usr/}sbin/* #{releasedir}/usr/bin"
  rm ['sbin', 'usr/sbin']
end

test do
  run 'kill --version'
  run 'blkid -k'
  run 'mount'
end
