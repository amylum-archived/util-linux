name 'util-linux'
org 'amylum'

license 'COPYING'

deps(
  pam: {
    version: '1.3.0-31',
    checksum: '54acfbca512e68b519712588532f993cea0669a5f0957ccfeb9810a4200ad823'
  },
  ncurses: {
    version: '6.0-20171021-2',
    checksum: '17550596975fb23889df8c747c509e214dc5c1df5de4670df400dc2bd8a22b1f'
  },
  'linux-api-headers': {
    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  }
)
remove_linker_archives
remove_pkgconfig_files

configure_flags(
  prefix: '/usr',
  libdir: '/usr/lib',
  bindir: '/usr/bin',
  localstatedir: '/run',
  'enable-fs-paths-default': '/usr/bin',
  'disable-rpath': nil,
  'with-systemd': 'no'
)

cflags
harden

build do
  run './autogen.sh'
  configure 'CPPFLAGS' => @forge.cflags.join(' ')
  make 'V' => '1'
  run 'find .libs -name "*.so*" -type f | xargs chrpath -d'
  install 'V' => '1'
  run "find .libs -name '*.so*' ! -name '*T' -type f | xargs -n1 -I{} cp {} #{releasedir}/usr/lib"
  run "mv #{releasedir}/{,usr/}sbin/* #{releasedir}/usr/bin"
  rm ['sbin', 'usr/sbin']
end

test do
  run 'kill --version'
  run 'blkid -k'
  run 'mount'
end
