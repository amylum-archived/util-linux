name 'util-linux'
org 'amylum'

license 'COPYING'

deps(
  pam: '1.3.0-16',
  ncurses: '6.0-20161126-1',
  'linux-api-headers': '4.9-rc6-1'
)
remove_linker_archives
remove_pkgconfig_files

configure_flags(
  prefix: '/usr',
  libdir: '/usr/lib',
  bindir: '/usr/bin',
  localstatedir: '/run',
  'enable-fs-paths-default': '/usr/bin',
  'disable-rpath': nil
)

cflags
harden

build do
  run './autogen.sh'
  configure 'CPPFLAGS' => @forge.cflags.join(' ')
  make 'V' => '1'
  run 'find . -name "*.so*" -type f | xargs chrpath -d'
  install 'V' => '1'
  run "mv #{releasedir}/{,usr/}sbin/* #{releasedir}/usr/bin"
  rm ['sbin', 'usr/sbin']
end

test do
  run 'kill --version'
end
