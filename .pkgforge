name 'util-linux'
org 'amylum'

license 'COPYING'

deps(
  pam: {
    version: '1.3.0-36',
    checksum: 'e161fc1a8d39156c1bd175d382991bfe2da4d6fe7315331b94a4bda1a97e4af4'
  },
  ncurses: {
    version: '6.1-20180224-1',
    checksum: '3c62b7a6a86036ebec5f2818b4ff6fbe6e6a8c1415de800d1dd66cbba8b2cb01'
  },
  'linux-api-headers': {
    version: '4.15-2',
    checksum: 'dbfe68e7620b09fe2996d83fe4ae738dddb2486885b9d5ef3dc27ae77d7585ba'
  }
)
remove_linker_archives
remove_pkgconfig_files

configure_flags(
  prefix: '/usr',
  libdir: '/usr/lib',
  bindir: '/usr/bin',
  localstatedir: '/run',
  'enable-fs-paths-default': '/usr/bin',
  'disable-rpath': nil,
  'with-systemd': 'no'
)

cflags
harden

build do
  run './autogen.sh'
  configure 'CPPFLAGS' => @forge.cflags.join(' ')
  make 'V' => '1'
  run 'find .libs -name "*.so*" -type f | xargs chrpath -d'
  install 'V' => '1'
  run "find .libs -name '*.so*' ! -name '*T' -type f | xargs -n1 -I{} cp {} #{releasedir}/usr/lib"
  run "mv #{releasedir}/{,usr/}sbin/* #{releasedir}/usr/bin"
  rm ['sbin', 'usr/sbin']
end

test do
  run 'kill --version'
  run 'blkid -k'
  run 'mount'
end
