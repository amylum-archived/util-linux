name 'util-linux'
org 'amylum'

deps(
  pam: '1.3.0-11',
  ncurses: '6.0-3',
  'linux-api-headers': '4.8-rc4-1'
)

configure_flags(
  prefix: '/usr',
  libdir: '/usr/lib',
  bindir: '/usr/bin',
  localstatedir: '/run',
  'enable-fs-paths-default': '/usr/bin',
)

cflags
harden

build do
  run './autogen.sh'
  configure
  make
  install
end

