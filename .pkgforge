name 'util-linux'
org 'amylum'

license 'COPYING'

deps(
  pam: {
    version: '1.3.0-43',
    checksum: '46f95d8c6582630e677b7c419635fc8a0013e70ed2a9e07edce7ae8807362611'
  },
  ncurses: {
    version: '6.1-20180908-1',
    checksum: 'd4a3ce8a59ae2c8bac367a993cd2f6952d48cb6f0390db6612f186d177e867cb'
  },
  'linux-api-headers': {
    version: '4.18-1',
    checksum: 'edc8dab0e57cb3868867a86d501eb5f314ad00d87e50957c3ffae113ce967298'
  }
)
remove_linker_archives
remove_pkgconfig_files

configure_flags(
  prefix: '/usr',
  libdir: '/usr/lib',
  bindir: '/usr/bin',
  localstatedir: '/run',
  'enable-fs-paths-default': '/usr/bin',
  'disable-rpath': nil,
  'with-systemd': 'no'
)

cflags
harden

build do
  run './autogen.sh'
  configure 'CPPFLAGS' => @forge.cflags.join(' ')
  make 'V' => '1'
  run 'find .libs -name "*.so*" -type f | xargs chrpath -d'
  install 'V' => '1'
  run "find .libs -name '*.so*' ! -name '*T' -type f | xargs -n1 -I{} cp {} #{releasedir}/usr/lib"
  run "mv #{releasedir}/{,usr/}sbin/* #{releasedir}/usr/bin"
  rm ['sbin', 'usr/sbin']
end

test do
  run 'kill --version'
  run 'blkid -k'
  run 'mount'
end
