name 'util-linux'
org 'amylum'

license 'COPYING'

deps(
  pam: {
    version: '1.3.0-47',
    checksum: '8756e2e0b2634bcad1533c44e645f155cd47f53ed68de4dcf19a10b6406030eb'
  },
  ncurses: {
    version: '6.1-20181215-1',
    checksum: 'e9ff7a34ec78c802325c044161dc3a1233a604d9462bcda4940ab91c9ca17351'
  },
  'linux-api-headers': {
    version: '4.19-1',
    checksum: 'de68cab17c2354ee660b269ccca30e275a9314563ebdfb4f427fc5ebe1395f30'
  }
)
remove_linker_archives
remove_pkgconfig_files

configure_flags(
  prefix: '/usr',
  libdir: '/usr/lib',
  bindir: '/usr/bin',
  localstatedir: '/run',
  'enable-fs-paths-default': '/usr/bin',
  'disable-rpath': nil,
  'with-systemd': 'no'
)

cflags
harden

build do
  run './autogen.sh'
  configure 'CPPFLAGS' => @forge.cflags.join(' ')
  make 'V' => '1'
  run 'find .libs -name "*.so*" -type f | xargs chrpath -d'
  install 'V' => '1'
  run "find .libs -name '*.so*' ! -name '*T' -type f | xargs -n1 -I{} cp {} #{releasedir}/usr/lib"
  run "mv #{releasedir}/{,usr/}sbin/* #{releasedir}/usr/bin"
  rm ['sbin', 'usr/sbin']
end

test do
  run 'kill --version'
  run 'blkid -k'
  run 'mount'
end
